doctype html
head
  meta(charset='UTF-8')
  title Rosen Chat
  link(rel='stylesheet' href='style.css')
ul.pages
  li.chat.page
    .chatArea
      ul.messages
    .inputMessage
      img.emoji(src='./img/emojis/face-palm.png' alt='Face Palm')
      img.emoji(src='./img/emojis/pained-laugh.png' alt='Pained Laugh')
    
      each source in sources
        img.emoji(src=`./img/emojis/${source}`)
  li.login.page
    .form
      h3.title What&apos;s your name?
      input.usernameInput(type='text' maxlength='14')
script(src='https://code.jquery.com/jquery-1.10.2.min.js')
script(src='/socket.io/socket.io.js')
script(src='/main.js')
