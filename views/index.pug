doctype html
head
  meta(charset='UTF-8')
  title Rosen Chat
  link(rel='stylesheet' href='style.css')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
ul.pages
  li.chat.page
    .chatArea
      ul.messages
    .inputMessage
      each source in sources
        div.emoji
          img(src=`./img/emojis/${source}`)
          label= source.substring(0, source.length-4).replace(/-/g, ' ')
  li.login.page
    .form
      h3.title What&apos;s your name?
      input.usernameInput(type='text' maxlength='14')
script(src='https://code.jquery.com/jquery-1.10.2.min.js')
script(src='/socket.io/socket.io.js')
script(src='/main.js')
